<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F1F1F1"
    android:padding="20dp"
    android:orientation="vertical">
    <ImageButton
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/ic_back"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Receipt"
        android:textAlignment="center"
        android:layout_marginBottom="30dp"
        android:textSize="24sp"/>
    <LinearLayout
        android:background="@drawable/searchview_background"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="G03 Meat Meat"
            android:textSize="24sp"
            android:layout_marginBottom="20dp"
            android:textAllCaps="true"
            android:textAlignment="center"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/receipt_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="No. Receipt : RC0000000001"/>
            <TextView
                android:id="@+id/receipt_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Date 6/08/2564"
                android:textAlignment="textEnd"
                android:layout_toRightOf="@id/receipt_id"/>
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/black"
            android:layout_marginTop="2dp"/>
        <TextView
            android:id="@+id/receipt_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Customer Name : Oh Au"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/black"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="5dp"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/Product_Name_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Amount  Product NamePrice"/>
            <TextView
                android:id="@+id/Product_price_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Price"
                android:textAlignment="textEnd"
                android:layout_toRightOf="@id/Product_Name_title"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/Product_Amount"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="8dp"
                android:textAlignment="center"
                android:text="1"/>
            <TextView
                android:id="@+id/Product_Name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAllCaps="true"
                android:text="WAGYU KUMAMOTO A3 "
                android:layout_toRightOf="@id/Product_Amount"/>
            <TextView
                android:id="@+id/Product_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="3,550"
                android:textAlignment="textEnd"
                android:layout_toRightOf="@id/Product_Name"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/Product_Amount2"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="8dp"
                android:textAlignment="center"
                android:text="1"/>
            <TextView
                android:id="@+id/Product_Name2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAllCaps="true"
                android:text="AMERICAN WAGYU STRIPLOIN "
                android:layout_toRightOf="@id/Product_Amount2"/>
            <TextView
                android:id="@+id/Product_price2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="3,550"
                android:textAlignment="textEnd"
                android:layout_toRightOf="@id/Product_Name2"/>
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/black"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/Text_Total"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="8dp"
                android:textAlignment="center"
                android:text="Total"/>
            <TextView
                android:id="@+id/Total_price2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="6,200"
                android:textAlignment="textEnd"
                android:layout_toRightOf="@id/Text_Total"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">
            <ImageButton
                android:id="@+id/Text_bank"
                android:layout_width="100dp"
                android:layout_height="55dp"
                android:background="@drawable/image_bank" />
            <LinearLayout
                android:id="@+id/Text_num_bank"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/Text_bank"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mr.Arat pony "
                    android:textSize="18sp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="023-0-12345-6"
                    android:textSize="18sp" />

            </LinearLayout>
            <RelativeLayout
                android:layout_toRightOf="@id/Text_num_bank"
                android:layout_marginStart="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageButton
                    android:id="@+id/image_receipt"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:background="@drawable/image_receipt"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:text="Promptpay"
                    android:layout_below="@id/image_receipt"/>
            </RelativeLayout>
        </RelativeLayout>

    </LinearLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="attach a picture"
        android:textColor="#FF9671"
        android:background="@drawable/edittext_stype"/>
    <androidx.appcompat.widget.AppCompatButton
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="transfer time"
        android:background="@drawable/edittext_stype"/>
    <androidx.appcompat.widget.AppCompatButton
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Done"
        android:textColor="@color/white"
        android:background="@drawable/buttom_stype"/>


</LinearLayout>